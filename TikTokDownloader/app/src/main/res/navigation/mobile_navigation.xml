<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_downloader">

    <fragment
        android:id="@+id/navigation_downloader"
        android:name="com.mina.tiktokdownloader.ui.downloader.DownloaderFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_downloader" />

    <fragment
        android:id="@+id/navigation_downloaded"
        android:name="com.mina.tiktokdownloader.ui.downloaded.DownloadedFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_downloaded" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.mina.tiktokdownloader.ui.setting.SettingFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>